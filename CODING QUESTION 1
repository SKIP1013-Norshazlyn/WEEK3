package exercise1;

class RectangleComputation {

	public static void main(String[] args) {
		
		//Declare 4 double variable
		double length, width, area, perimeter;  
		
		//Assign a value to length and width
		length = 8.4;
		width = 4.2;
		
		//Compute area and perimeter
		area = length*width;
		perimeter = (length + width)*2;
		
		//Print results
		System.out.println("The area of a rectangle is " +area);
		System.out.printf("The perimeter of a rectangle is %.2f" ,perimeter);
		

	}

}


package exercise1;

class CylinderComputation {

	public static void main(String[] args) {
		
		//Declare 5 variable
		double radius, height, surfaceArea, baseArea, volume;
		
		//Assign value
		radius = 3.5;
		height = 12.5;
		final double PI = 3.14159265;
		
		//Compute surface area, base area, volume
		surfaceArea = (2*PI*radius*radius) + (2*PI*radius*height);
		baseArea = PI*radius*radius;
		volume = PI*radius*radius*height;
		
		//Print results
		System.out.printf("The surface area of cylinder is %.2f " ,surfaceArea);
		System.out.println("");
		System.out.printf("The base area of cylinder is %.2f" ,baseArea);
		System.out.println("");
		System.out.printf("The volume of cylinder is %.2f" ,volume);

	}

}
